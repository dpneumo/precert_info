<%= form_with(model: mdl) do |form| %>
  <div class="flex flex-col w-full my-4">
    <% if mdl.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(mdl.errors.count, "error") %> prohibited this from being saved:</h2>

        <ul>
          <% mdl.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render attribs, form: form, mdl: mdl %>

    <div class="mx-4 mt-5 w-full">
      <%= form.submit 'Save',
            class: "mx-4 submit-button font-sans" %>

      <%= link_to 'Cancel', cancel_path,
            class: "mx-4 text-gray-900 text-sm font-sans font-semibold leading-6 link-hover" %>
    </div>
  </div>
<% end %>
