<%= form_with( model: provider, method: method ) do |form| %>
	<div class="flex flex-col md:flex-row">
		<%= render 'shared/form/text_field', attrib: :name, form: form %>
	</div>

	<div class="flex flex-col md:flex-row">
	  <%= render 'shared/form/select_field', attrib: :office_id, form: form,
                label_txt: 'Office',
                collection: office_options,
                include_blank: true,
                selected: provider.office_id %>
	</div>

  <div class="flex flex-row mx-4 my-4 space-x-4">
    <%= form.submit 'Save',
              class: "py-1 px-4 rounded bg-blue-500 hover:bg-blue-700 text-white font-sans font-bold" %>
    <%= form.button "Close",
              class: "py-1 px-4 rounded bg-gray-500 hover:bg-gray-700 text-white font-sans font-bold",
              value: nil,
              formmethod: :dialog %>
    <% if provider.id %>
			<div class="py-1 px-4 rounded bg-red-500 hover:bg-red-700 text-white font-sans font-bold">
			  <%= link_to "Delete",
								provider_path(provider),
								data: { turbo_method: :delete,
												turbo_confirm: "Are you sure?" } %>
			</div>
		<% end %>
  </div>
<% end %>
