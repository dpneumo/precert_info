  <tr class='<%= background %>' >
    <td class='td-pad td-base'><%= contact.date_of_contact %></td>
    <td class='td-pad td-base'><%= contact.dur_of_contact %></td>
    <td class='td-pad td-base hidden lg:table-cell'><%= contact.note_hint %></td>
    <td scope="col" class="th-pad th-base-right">
      <%= link_to 'Edit',
              edit_precert_contact_path(contact.precert, contact),
              class: 'text-base font-sans font-medium link-hover',
              data: { turbo_stream: true } %>
    </td>
    <td>
      <%= link_to( 'Delete',
              precert_contact_path(contact.precert, contact),
              class: 'text-base font-sans font-medium link-hover',
              data: { turbo_method: :delete,
                      turbo_confirm: "Are you sure?" }) %>
    </td>
  </tr>
