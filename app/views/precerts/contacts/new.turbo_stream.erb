<%# app/views/precerts/contacts/new.turbo_stream.erb %>

<%= turbo_stream.show_remote_modal do %>
  <dialog id="contact_form_modal"
          aria-labelledby="modal_title">
    <%= render 'shared/modal_header',
                title: 'New Contact' %>

    <%= render 'precerts/contacts/form',
                precert: @contact.precert,
                contact: @contact,
                method: :post %>
  </dialog>
<% end %>
