<%= form_with( model: [precert, contact], method: method ) do |form| %>
	<%= form.hidden_field :precert_id %>

	<div class="flex flex-col md:flex-row">
	  <div class='col-start-0'>
	  	<%= render 'shared/form/datetime_field',
	  							attrib: :contact_date,
	  							max: 1.year.from_now,
	  							seconds: true,
	  							form: form %>
	  </div>
	  <div class='col-start-2'>
	  	<%= render 'shared/form/number_field',
	  							attrib: :duration,
	  							form: form %>
		</div>
	</div>

	<div class="flex flex-col md:flex-row">
		<div class='col-start-0'>
	    <%= render 'shared/form/text_area',
			    				attrib: :note,
			    				cols: 46,
			    				rows: 1,
			    				form: form %>
	  </div>
	</div>

	<div class="flex items-center justify-end">
				<%= form.submit 'Save',
		            	class: "inline-block h-10 mx-4 font-sans submit-button" %>
		    <%= form.button "Close",
		    					class: "inline-block h-10 mx-4 font-sans",
		    					value: nil,
		    					formmethod: :dialog %>
	</div>
<% end %>
