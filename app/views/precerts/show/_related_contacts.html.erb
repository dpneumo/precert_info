<div class="flex flex-row justify-between">
  <h1 class="font-sans font-bold text-xl">Contacts</h1>
</div>

<div class="flex flex-col max-w-full mx-auto">
  <div class="inline-block relative py-2 overflow-x-auto">
    <table class="w-full text-xl font-medium">
      <thead class="bg-gray-400 font-sans font-medium dark:border-neutral-800 dark:bg-neutral-300">
        <%= render 'precerts/contacts/head' %>
      </thead>
      <tbody>
        <% contacts.each_with_index do |contact, i| %>
          <% next unless contact.id %>
          <% background = i.even? ? 'bg-white' : 'bg-gray-200' %>
          <%= render 'precerts/contacts/row', contact: contact, background: background %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
