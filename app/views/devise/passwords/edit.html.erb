<div class="grid grid-cols-1 sm:grid-cols-2 w-full">

  <div class='mx-6 mb-6 mt-2'>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <h1 class='font-sans font-bold text-lg'>Change your password</h1>

      <%= render 'devise/shared/password_field',
            f: f, label: 'New Password', item: :password,
            autocomplete: 'new-password' %>

      <%= render 'devise/shared/password_field',
            f: f, label: 'Confirm Password', item: :password_confirmation,
            autocomplete: 'new-password' %>

      <%= render 'devise/shared/submit',
            f: f, label: 'Change my password' %>
    <% end %>
  </div>


  <%= render "devise/shared/links" %>

</div>