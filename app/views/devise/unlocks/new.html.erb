<div class='w-1/6'>
  <%= form_for( resource,
                as: resource_name,
                url: unlock_path(resource_name),
                html: { method: :put } ) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <h1 class='font-sans font-bold text-lg'>Resend Unlock Instructions</h1>

    <%= render 'users/shared/form_field',
          f: f, label: 'Email', item: :email,
          autofocus: true, autocomplete: 'email' %>

    <%= render 'users/shared/submit',
          f: f, label: 'Resend unlock instructions' %>

    <%= render "users/shared/links" %>
  <% end %>
</div>
